include "conf.d/<%= name %>.*.before.conf";

server {
  server_name   <%= server_name %>;
  root          <%= root %>;
  index         <%= index %>;
  try_files     <%= try_files %>;

  include "conf.d/<%= name %>.*.inside.conf";

  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

}

include "conf.d/<%= name %>.*.after.conf";
